<Window x:Class="Assignment7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment7"
        mc:Ignorable="d"
        Title="Assignment7" Width="1280" Height="960">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="image" Stretch="None" />
        </ScrollViewer>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" x:Name="progressBarViewer" >
            <ProgressBar x:Name="progressBar" VerticalAlignment="Top" Height="15" Margin="10"/>
            <TextBlock x:Name="progressBarText" Text="100%" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
